{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/bundles/easyadmin/app.css">
{% endblock %}

{% block body %}
<form method="post" class="w-25 mt-4 mx-auto">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-center">
            你已登录 {{ app.user.username }}, <a href="{{ path('app_logout') }}">退出</a>
        </div>
    {% endif %}

    <img src=/img/logo.png class="rounded-circle mx-auto d-block mb-1">
    <h1 class="h3 mb-3 font-weight-normal text-center">达人共享宝</h1>
    <label for="inputUsername">用户名</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <label for="inputPassword" class="mt-2">密码</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    #}

        <div class="checkbox mt-2">
            <label>
                <input type="checkbox" name="_remember_me"> 记住我 
            </label>
        </div>

    <button class="btn btn-lg btn-primary mt-2 w-100" type="submit">
      登 录
    </button>
</form>
{% endblock %}
